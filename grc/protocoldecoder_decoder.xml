<?xml version="1.0"?>
<block>
  <name>Decoder</name>
  <key>protocoldecoder_decoder</key>
  <category>[protocoldecoder]</category>
  <import>import protocoldecoder</import>
  <make>protocoldecoder.decoder($inputformat, $protocol)</make>

  <param>
    <name>Protocol</name>
    <key>protocol</key>
    <type>string</type>
  </param>

  <param>
    <name>Input Format</name>
    <key>inputformat</key>
    <type>string</type>
  </param>

  <sink>
    <name>in</name>
    <type>message</type>
  </sink>

</block>
